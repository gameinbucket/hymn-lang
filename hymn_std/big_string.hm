class big_string
    list   []string
    length  uint

def new_big_string() big_string
    return big_string()

def big_string.write(new string)
    self.list = push(self.list, new)
    self.length += uint len(self.list)

def big_string.write_char(new char)
    self.list = push(self.list, str(new))
    self.length += uint 1

def big_string.len() uint
    return self.length

def big_string.str() string
    mutable out = ""
    iterate s in self.list
        out += s
    return out
